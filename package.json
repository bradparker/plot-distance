{
  "name": "gsc-map",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scripts": "mkdir -p dist/assets/javascripts/ && browserify source/assets/javascripts/index.js -o dist/assets/javascripts/index.js",
    "watch-scripts": "nodemon -x 'npm run scripts' -w source/assets/javascripts",
    "styles": "mkdir -p dist/assets/stylesheets/ && postcss -u 'postcss-import' -u 'autoprefixer' -o dist/assets/stylesheets/main.css source/assets/stylesheets/main.css",
    "watch-styles": "nodemon -x 'npm run styles' -w source/assets/stylesheets",
    "images": "mkdir -p dist/assets/images/ && cp -R source/assets/images dist/assets/images",
    "watch-images": "nodemon -x 'npm run images' -w source/assets/images",
    "index": "mkdir -p dist && cp source/index.html dist/index.html",
    "watch-index": "nodemon -x 'npm run index' -w source -e html",
    "build": "npm run scripts && npm run styles && npm run images && npm run index",
    "watch": "npm run watch-scripts & npm run watch-styles & npm run watch-images & npm run watch-index",
    "serve": "static dist",
    "dev": "npm run watch & npm run serve",
    "test": "mocha --compilers js:babel/register --recursive source/**/__tests__/**-test.js"
  },
  "author": "Brad Parker <hi@bradparker.com>",
  "license": "ISC",
  "dependencies": {
    "leaflet": "^0.7.5",
    "lodash": "^3.10.1",
    "react": "^0.13.3"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "ecmaFeatures": {
      "arrowFunctions": true,
      "modules": true,
      "blockBindings": true,
      "jsx": true
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel": "^5.8.23",
    "babelify": "^6.3.0",
    "browserify": "^11.2.0",
    "chai": "^3.3.0",
    "jsdom": "^3.1.2",
    "mocha": "^2.3.3",
    "mocha-jsdom": "^1.0.0",
    "node-static": "^0.7.7",
    "nodemon": "^1.7.1",
    "postcss-cli": "^2.2.0",
    "postcss-import": "^7.0.0"
  }
}
